<Window x:Class="DocTag.DocTagWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="文档标签工具" Height="278" Width="390" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="120"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Button Grid.Column="1" Name="SaveTagBtn" Content="保存" Height="30" Click="SaveTagBtn_Click"  Margin="10 10 10 10"></Button>
                <TextBox VerticalContentAlignment="Center" Name="TagTB" Height="30"  Margin="10 10 10 10"></TextBox>
                <WrapPanel Name="TagWP" Grid.Row="1" Grid.ColumnSpan="2" Height="auto">
                    
                </WrapPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
